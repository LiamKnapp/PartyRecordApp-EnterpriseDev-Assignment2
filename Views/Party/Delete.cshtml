@model PartyRecordApp.Entities.Party

@{
    ViewData["Title"] = "Delete Party";
}


<h4>Are you sure that you want to delete?</h4>
<p>Description: @Model.EventDescription</p>
<p>Location: @Model.EventLocation</p>
<p>Date: @Model.EventDate</p>
<p>And its saved invitations</p>
<form asp-controller="Party" asp-action="Delete" method="post">
    <input type="hidden" asp-for="PartyId" />
    <button type="submit" class="btn btn-primary">Delete</button>
    <a asp-controller="Party" asp-action="List" class="btn btn-secondary">Cancel</a>
</form>