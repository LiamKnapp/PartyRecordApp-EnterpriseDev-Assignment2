@model PartyViewModel

@{
    ViewData["Title"] = "Add a Party";
}

<form asp-controller="Party" asp-action="Add"
      method="post" enctype="application/x-www-form-urlencoded">
    <!-- a placeholder for validn err msgs, if there are any -->
    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="NewParty.EventDescription">Event Description</label>
        <input type="text" asp-for="NewParty.EventDescription" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="NewParty.EventLocation">Event Location</label>
        <input type="text" asp-for="NewParty.EventLocation" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="NewParty.EventDate">Event Date</label>
        <input type="text" asp-for="NewParty.EventDate" class="form-control" placeholder="DD/MM/YYYY" />
    </div>

    <button type="submit" class="btn btn-primary">Confirm</button>
    <a asp-controller="Party" asp-action="List" class="btn btn-secondary">Cancel</a>
</form>
